{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "references": [
        {
            "path": "./src"
        }
    ],
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "build", "ccSrc"]
}
